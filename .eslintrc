{
  "parser"  : "babel-eslint",
  "extends" : [
  "standard",
  "standard-react"
],
  "plugins": [
  "babel",
  "react",
  "promise"
],
  "env"     : {
  "browser" : true
},
  "globals" : {
  "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false
},
  "rules": {
    "max-len": [2, 120, 2],
    "object-property-newline": [0],
    "no-var": [2],
    "react/prop-types": [0],
    "semi" : [2, "never"],
    "jsx-quotes": [2, "prefer-single"],
    "indent": ["error", 2]
 }
}
